<h1>{{title}}</h1>
<div class="class-heading info-box">
	<div class="class-portrait">{{class_portrait}}</div>
	<div class="class-info ">
		<div class="main_info">
			<h4>{{writeString=class_detail.heading.teachers}}</h4>
			<p>{{class_teacher}}</p>{{identifierContext=start;name=ancestor_class_link}}
			<h4>{{writeString=class_detail.heading.ancestor_class}}</h4>
			{{ancestor_class_link}}{{identifierContext=end;name=ancestor_class_link}}{{identifierContext=start;name=successor_class_link}}
			<h4>{{writeString=class_detail.heading.successor_class}}</h4>
			{{successor_class_link}}{{identifierContext=end;name=successor_class_link}}
		</div>
		<div>{{schedule}}<br />
			{{schedule_extra}}</div>
	</div>
</div>
{{news}}{{identifierContext=start;name=documents_title}}
<div class="documents columnview single-container">
<h2>{{documents_title}}</h2>
	{{documents}}
</div>{{identifierContext=end;name=documents_title}}{{identifierContext=start;name=links_title}}
<div class="links columnview single-container">
	<h2>{{links_title}}</h2>
	{{links}}
</div>{{identifierContext=end;name=links_title}}

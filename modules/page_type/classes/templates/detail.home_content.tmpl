	{{news}}
</div>
<table class="teachers_and_subjects">
	<thead>
		<tr>
			<th colspan="2"><span class="title">{{writeString=class_detail.heading.teachers_and_subjects}}</span></th>
			<th>{{writeString=class_detail.heading.subject_link}}</th>
		</tr>
	</thead>
	<tbody>
		{{teacher_and_subject}}
	</tbody>
</table>

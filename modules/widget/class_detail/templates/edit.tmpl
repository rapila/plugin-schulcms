<form enctype="multipart/form-data">
	<div class="accordion">
		<h3><a href="#">Allgemeine Infos</a></h3>
		<div class="tab_part general_info">
			<div class="status_section">
				<div class="hide_if_not_saved">
					<h3>Daten aus ***REMOVED*** [ ID :<span class="original_id status"></span> ]</h3>
					<label>Name:</label><span class="name status"></span><br />
					<label>Jahr:</label><span class="year_period status"></span><br />
					<label>Klassenlehrer:</label><span class="class_teacher status"></span><br />
					<label>Zimmer:</label><span class="room_number status"></span><br />
					<div class="droppable_separator">
						<div class="stundenplan ui-state-droppable" title="Stundenplan hier hinein ziehen">
							<span class="description">Stundenplan (PDF)<span title="{{writeString=wns.class.remove_schedule}}" class="remove"> ✘</span></span>
							<div class="class_schedule"></div>
						</div>
					</div>
					<div class="droppable_separator">
						<div class="wochenplan ui-state-droppable" title="Wochenplan hier hinein ziehen">
							<span class="description">Wochenplan (PDF)<span title="{{writeString=wns.class.remove_schedule}}" class="remove"> ✘</span></span>
							<div class="week_schedule"></div>
						</div>
					</div>
				</div>
			</div>
			<div class="specials">
				<div class="preview">
					<div class="portrait_area ui-state-droppable" title="Portrait hier hinein ziehen">
						<span class="description">(Klassen-) Bild<span title="{{writeString=wns.class.remove_portrait}}" class="remove"> ✘</span></span>
						<div class="class_portrait"></div>
					</div>
				</div>
			</div>
		</div>
		<h3><a href="#">{{writeString=wns.class.events}}<span class="events_count number"></span></a></h3>
		<div class="tab_part">
			<table class="event_list ui-list ui-editable-items-list">
			</table>
			<a class="add-new-item add_entry add_event" title="{{writeString=wns.create_new_entry}}"> </a>
		</div>
		<h3><a href="#">{{writeString=wns.class.documents}}<span class="documents_count number"></span></a></h3>
		<div class="tab_part">
			<table class="document_list ui-list ui-editable-items-list">
			</table>
			<a class="add-new-item add_entry add_document" title="{{writeString=wns.create_new_entry}}"> </a>
		</div>
		<h3><a href="#">{{writeString=wns.class.links}}<span class="links_count number"></span></a></h3>
		<div class="tab_part">
			<table class="link_list ui-list ui-editable-items-list">
			</table>
			<a class="add-new-item add_entry add_link" title="{{writeString=wns.create_new_entry}}"> </a>
		</div>
	</div>
	</form>

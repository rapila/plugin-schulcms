Widget.types.class_news_list = {
	prepare: function() {
		var widget = this._list;
		Widget.callStatic('detail', 'connect_detail_with_list', 'news', widget, 'setNewsId', null, {
			initialized: function(detail) {
				detail.settings.predefined_news_type_id = widget.settings.school_class_news_type_id;
				detail.settings.predefined_school_class_id = widget.settings.predefined_school_class_id;
			}
		});
		widget.handle('list-cell_click', function(event, rowIndex, col, row, cell) {
			if(col.identifier === 'delete') {
				var headline = widget.cell_for_identifier('headline', row).text();
				var delete_message = AdminInterface.strings.get_string('wns.news.delete_warning', { headline: headline});
				Widget.confirm("{{writeString=wns.delete_warning_title}}", delete_message, function(confirmed) {
					if(confirmed) {
						this.delete_row(row);
					}
				}.bind(this));
				event.stopPropagation();
			}
		});
	}
};
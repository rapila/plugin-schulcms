<form>
	<div class="status_section">
		<div class="image_area ui-state-droppable" title="Bild hier hinein ziehen">
			<span class="description">Bild<span title="{{writeString=wns.note.remove_image}}" class="remove"> âœ˜</span></span>
			<div class="note_image"></div>
		</div>
		<div class="hide_if_not_saved">
  		<label>{{writeString=wns.created_info}}:</label><span class="created_info status"></span><br />
  		<label>{{writeString=wns.updated.info}}:</label><span class="updated_info status"></span><br />
		</div>
	</div>
	<div>
		<div class="group_fields">
			<label for="date_start">{{writeString=wns.note.date_start}}*</label>
			<input type="text" name="date_start" size="10" class="ui-widget-content autowidth"/><br />
		</div>
		<div class="group_fields">
			<label for="date_end">{{writeString=wns.note.date_to}}</label>
			<input type="text" name="date_end" size="10" class="ui-widget-content autowidth"/><br />
		</div>
		<div class="group_fields">
			<label for="note_type_id" class="validate-note_type_required">{{writeString=wns.note.type}}*</label>
			<select name="note_type_id" class="ui-widget-content autowidth" data-widget-type="note_type_input"></select><br />
		</div>
		<div class="group_fields">
			<label for="is_inactive">{{writeString=wns.is_inactive}}</label>
			<input type="checkbox" name="is_inactive" /><br />
		</div>
	</div>
	<label for="body" class="validate-body_required">{{writeString=wns.note.body}}*</label>
	<div class="note_body" data-widget-type="rich_text">
		<textarea name="body" class="ui-widget-content" rows="10" cols="40"></textarea>
	</div>
</form>



.main_content select.ui-widget-content,
.main_content input.ui-widget-content,
.main_content textarea.ui-widget-content {
	width: 30em;
}

div.status_section input.ui-widget-content {
	width: 16em;
}

.group_fields  textarea.ui-widget-content {
	width: 14.5em;
}

.ui-dialog.detail-widget-service_detail fieldset {
	border: 1px solid #DFDFDF;
	margin-left: 0;
	padding: 4px 7px 9px 7px;
}

.ui-dialog.detail-widget-service_detail .image_browse_area {
	padding: 0 0 3em;
}

.ui-dialog.detail-widget-service_detail .ui-list.document_list {
	min-height: 7em;
	margin: 0;
}

.ui-accordion-content .document_list .ui-icon {
	display: inline-block;
}

table.document_list td {
	background-color: inherit;
	width: 25px;
}

.ui-accordion-content .document_list td.document_name {
	display: inline-block;
	width: auto;
	padding-left: 1.9em;
}

table.document_list div.no_documents_placeholder {
	padding:2em 5em;
	font-size:1.1em;
	background-image: none;
}
.ui-list tr.preview_edit.ui-list-row {
	max-height: 22px;
}

.logo_area {
	background-color: #FFF;
	vertical-align: center;
	text-align: center;
	width: 200px;
	display: block;
	line-height: 1.6em;
	min-height: 5em;
	padding: 0;
	margin: .5em 0;
	color: #bebebe;
	border: 1px solid #f1f1f1;
}

.service_logo {
	margin: .2em 0;
}

span.remove {
	color: black;
	cursor: pointer;
}

span.document_name {
	padding-left: 1.6em;
	padding-bottom: .3em;
	color: #999;
	background: transparent url("{{writeDirectInclude=admin/pdf.png;template=location_only}}") no-repeat;
	display: inline-block;
}

span.document_name.docx, span.document_name.doc {
	background: transparent url("{{writeDirectInclude=admin/doc.png;template=location_only}}") no-repeat;
}

td.counter {
	width: 10px;
}

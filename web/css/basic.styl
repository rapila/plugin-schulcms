@import "***REMOVED***_vars"

html, body
	margin 0
	padding 0
	font-family "Trebuchet MS", Georgia, Arial, Helvetica, sans-serif
	font-size 10px
	color #222
	background-color background_color

body.editing
	font-size 13px
	line-height 1.4em
	height 100%
	background-color #FFF

a
	text-decoration none
	color #666

.datum a
	display block
	background none
	padding-right 0px

h1, h2, h3, p, ul
	margin 0
h2, h3, h4
	margin-top 1em
h2:first-child, h1:first-child, h3:first-child
	margin-top 0	
h1
	margin-bottom 1em
	margin-top 0
	font-size 22px
ul, li
	list-style none
	margin 0
	padding 0
p, ul
	padding-bottom 1em
	
.inner ul, body.editing ul
	margin-left 1.3em
.inner ul, .inner li, body.editing ul, body.editing li
	list-style-image url(../images/list-bg-img.png)
	list-style-position outside
	padding-bottom .3em
.inner li, body.editing li
	padding-left 0

#top_left_area, #main_left_area
	position absolute
	left 0
	width sidebar_left_width
#top_left_area
	top 0
	height top_area_height
	background-color background_dark_color
#main_left_area
	top top_area_height
	bottom 0
#top_right_area
	position absolute
	left 0
	right 0
	top 0
	height top_area_height
	background-color background_dark_color
#main_right_area
	position absolute
	top 0
	left sidebar_left_width
	right 30px
	min-width main_right_width_min
	max-width main_right_width_max
	background-color #FFF
	min-height 100%

#header_main, #blackboard_area
	background transparent url(../images/blackboard.jpg) no-repeat top right
	position absolute
	top top_area_height
	height header_main_height
	
#blackboard_text
	top 0	
	margin-top 20px
	margin-left sidebar_left_width+30px
	color background_color
	height 80px
	vertical-align middle
	p
		color background_color
		line-height 1.2em
		font-size 2.6em
		vertical-align middle
		a.blackboard_more_link
			font-size .6em
			
#blackboard_text, #content_main h1, #content_main h2,
body.editing h1, body.editing h2
	font-family 'Architects Daughter', Courier, Serif
	line-height 1em
	font-weight normal
	padding-bottom .1em
.home #header_main, .home #blackboard_area
	height header_main_height+22px

a.pdf,
a.doc, 
a.docx
	padding-left 1.6em
	background transparent url(../images/pdf.png) no-repeat 1px 2px
	display inline-block
	vertical-align top
	
a.doc, 
a.docx
	padding-left 1.6em
	background transparent url(../images/doc.png) no-repeat 1px 2px

.document_list td:first-child span
	display:block
	padding-left 22px

.service_portraits
	float:right
	width 150px
	margin 0 0px 20px 20px
	
.portrait_item span 
	display block
	font-size .95em
	margin-bottom .8em
	font-style oblique

#header_main
	left 0
	right 0
#blackboard_area
	right 0
	width sidebar_right_width
a#school_logo
	position absolute
	top 0
	left 0
	background-color school_color
	width sidebar_left_width
	height logo_height
a#***REMOVED***_logo
	background-color background_dark_color
	display block
	width header_top_left_width - sidebar_left_width
	padding-top 0px
	height logo_height
	img
		padding 4px 3px

ul#meta_navigation
	position absolute
	top 0em
	left sidebar_left_width
	right 0
	height 100%
	padding-top .5em
	background-color background_color
	display block

ul#main_navigation
	display block
	padding-bottom .6em
	&.home
		margin-right sidebar_right_width
		margin-top 20px
	
img.blackboard_image
	float right
	width 194px
	margin -20px 0 0 10px
	min-height 142px
	
#spacer
	height 75px

ul#secondary_navigation
	margin-top 142px

ul#meta_navigation li a, ul#meta_navigation li span, ul#main_navigation li a, ul#main_navigation li span, ul#secondary_navigation li a, ul#secondary_navigation li span
	text-transform uppercase
	letter-spacing .08em
	font-size 1.3em
	line-height 1.4em
	color #FFF

body.default ul#main_navigation li 
	a, span
		color #666

ul#secondary_navigation 
	li
		padding 0.2em 1em
		a
			color #6F6F6E
			&.active, &.current
				color school_color
		span
			color school_color

body.default ul#main_navigation 
	li 
		span,	a.active, a.current
			color school_color
ul#meta_navigation li span
	color school_color

body.default ul#main_navigation li a:hover,
ul#meta_navigation li a:hover,
ul#secondary_navigation li a:hover 
	color black

ul#main_navigation li:first-child
	padding-left .5em

ul#meta_navigation li
	float right
	padding 0 0 0 2em
	a
		color #817F7D

#sidebar_right
	position absolute
	top (header_main_height + top_area_height)
	bottom 0
	right 0
	background-color #E7D9D9
	padding 0
	width sidebar_right_width
	background-color sidebar_right_color
	.inner > p
		padding-left 2px
	h1, h2
		margin-bottom .5em
		color #FFF
		line-height 24px
		font-size 13px
		background-color school_color
	h1, h2, table td
		padding-left 2px
		padding-right 2px
	h2
		margin-top 22px
		margin-bottom .3em
		&.list_header
			margin-bottom 0 !important
		a
			color #FFFFFF
			&.class_home, &.class_home:hover
				display block
			&.class_home
				background url('../images/home_context.png') transparent right center no-repeat
			&.class_home:hover
				background url('../images/home_context_hover.png') transparent right center no-repeat
		&:first-child
			margin-top 0
	table
		width sidebar_right_width !important
		td.event_title 
			span
				font-size 0.9em
				display block
				margin-top -4px
	img:first-child + h2
		margin-top 0
	.sidebar_detail
		position fixed
		width 194px
	.detail_info p
		padding .2em .2em
		border-bottom 1px solid sidebar_right_line_color
	.links a,
	.service_documents a
		display block
		padding-left 18px
		padding-bottom 2px
		border-bottom 1px solid sidebar_right_line_color
		background url('../images/links_context.png') transparent 0px 2px no-repeat
	.links
		margin-top 1.5em
		a
			line-height 20px

.home #sidebar_right
	top (header_main_height+22px + top_area_height)

#content_main
	margin-top (header_main_height + top_area_height)
	margin-right sidebar_right_width
.home #content_main
	margin-top (header_main_height + top_area_height + 75px)

#searchbar
	position fixed
	bottom 10px
	left 10px
	z-index 1
	height 28px
	margin-left .3em
	font-size 1.4em
	input
		color black
		background-color #E8E6E6
		padding .2em .4em
		width 145px
		border 1px solid #bab6b5
		border-top-color #bab6b5
		border-left-color #bab6b5
		border-bottom-color #F1EFEF
		border-right-color #F1EFEF
	#search_button
		display inline-block
		padding .1em .3em
		border none
		background transparent url(../images/search_icon.png) no-repeat center center
		&.active
			background transparent url(../images/search_icon_active.png) no-repeat center center

input::-moz-placeholder, input::-webkit-input-placeholder
	color #A5A2A1

.inner
	padding-top 75px
	font-size 1.3em
	line-height 1.3em
	font-family Arial, Helvetica, Sans Serif
#content_main .inner
	line-height 1.4em
	padding 0px 5px 20px 5px
#sidebar_right .inner
	line-height 1.4em
.home #sidebar_right .inner
	padding-top 54px

table
	width 100%
	border-collapse collapse

#content_main table.with_header:first-child
	margin-top -23px

table.list_view 
	td
		vertical-align top
	tr.row:nth-child(2n+1) td
		background-color #FdFdFd

th
	text-align left
	font-weight normal
	font-size .9em
	font-style oblique
	line-height 18px
	color #999
td, th
	padding 0 3px
	vertical-align top
	border-bottom 1px solid #F9F9F9
	line-height 24px
	a
		line-height 24px
#sidebar_right
	td, th
		line-height 22px
td p
	line-height 20px
	margin 0
	padding 0

table.context_list tr td
	border-bottom 1px solid sidebar_right_line_color

td.datum, #sidebar_right td.datum
	padding-left 0
	padding-right 0em
	width 25px

.event_list 
	td 
		line-height 18px
		a.detail_link
			display block
			width 20px
			background transparent url(../images/detail_link.png) no-repeat 0 3px
			&:hover 
				background transparent url(../images/detail_link_hover.png) no-repeat 0 3px
		p
			line-height 16px
			padding 2px 0
			margin-bottom .8em
	&.context_list
		tr
			&:hover td
				background-color rgba(#fff, 0.3)
			td p
				margin-bottom .5em
				a.teaser_link
					color #333
		.event_title 
			a
				line-height 10px
				padding-top 3px
				padding-left 3px
				max-width sidebar_right_link_width

.recent_event_image_link
	display block
	margin-top -7px
	img
		width 194px
		
.report_and_images_teaser 
	font-size 0.9em
	line-height 20px
	color #666
	margin-top 2em
	a
		text-decoration underline

.row.active td, .row.active td a
	color school_color
	height 100%
	
table.statistics_list 
	margin-top -5px
	
.statistics_list td
	border-bottom 1px solid sidebar_right_line_color
	line-height 22px
	font-size 12px

.is_active
	color school_color
	width 2em
	text-align right

.row:first-child div
	border-top 1px solid background_color

.row:first-child td div
	border-top none

a.stundenplan
	float right
	width 15px
	padding-right 2px
	background transparent url(../images/pdf.png) no-repeat center left
	&:hover
		background transparent url(../images/pdf_hover.png) no-repeat center left
		
.detail_info 
	span
		&.function
			font-style oblique
			display inline-block
			font-size .9em
			margin-bottom .3em
			padding-right .5em
		&.schedule
			display inline-block
			width 70px
	a.stundenplan
		display inline-block
	label:first-child
		margin-top 0
	h1 a
		color #f6f6f6	
		
.detail_info label, 
#sidebar_right h4
	margin 0
	padding 0
	font-weight normal
	font-size inherit
	display block
	font-style oblique
	margin-top .8em
	color school_color

ul.class_teachers
	margin-top .3em
	li
		padding-bottom 0

#aktuell_container
	float right
	width 230px
	margin-left 14px
	padding 0 10px
	font-style oblique
	h1, h2
		font-size 1.3em
		font-family "Trebuchet MS", Georgia, Arial, Helvetica, sans-serif

.home 
	#content_main .inner
		max-width 440px
	#aktuell_container .inner
		width auto

img
	vertical-align bottom
	&.class_portrait
		width 668px
		margin-bottom 1em
a img
	border none

.date_square
	border-radius 1px
	background-color #F5F173
	color #333
	font-size 15px
	margin-top 0px
	padding 2px 0 3px
	width 36px
	line-height .85em
	text-align center
	border-left 1px solid #D1C4C4
	border-bottom 1px solid #D1C4C4
	margin-bottom .3em
	&.passed 
		background-color #F7F7F7;
	span
		display block
		margin-bottom 2px
		font-family Arial
		font-size .7em
	div
		border none
	
.gallery
	margin-top 1em
	.gallery-canvas
		display inline-block
		position relative
		width slide_frame
		height slide_frame
		line-height slide_frame
		margin-right 2px
		&.gallery-detail-link
			background-image none
			padding-right 0
		.gallery-frame, .gallery-item, .gallery-item-holder
			position absolute
			top 0
			left 0
			right 0
			bottom 0
			z-index 0
		.gallery-frame
			z-index 1
			background transparent url('../images/slide_frame.png') no-repeat scroll center center
		.gallery-item
			top 3px
			left 3px
			right 3px
			bottom 3px
			background-color black
			.gallery-item-holder
				display block
				text-align center
				img
					margin 0 auto
					vertical-align middle
	a, span
		display block

.wraptocenter
	background #f1f1f1
	display table-cell
	text-align center
	vertical-align middle
	width 163px
	height 163px
.wraptocenter *
	vertical-align middle
	
a.event_teaser_classlink
	margin-left 1em

.date
	font-style oblique

.container-contentcontainer-content .date
	margin-bottom .6em

.align_right
	text-align right

img.service_logo
	float right
	margin 0 1em 1em 2em

.not_found_page
	border 1px solid school_color
	padding 1em

#aktuell_container, 
.events a.active, 
#content_main h2,
#content_main h1, 
a:hover,  
.highlight,
a.active,
tr:hover a
	color school_color
	
.today 
	padding-left 3px
	border 1px solid #999

.status_icons
	width 16px
	&.has_bericht
		background transparent url(../images/has_bericht.png) no-repeat 0 3px 
	&.has_images
		background transparent url(../images/has_images.png) no-repeat 0 3px

.service_list,
.link_list,
.team_list,
.class_list
	td:first-child a
		display block
		padding-left 22px
		background url('../images/services.png') transparent 0px 4px no-repeat
		
a.event_service_link
	margin .5em 0
	display block
	padding-left 19px
	line-height 22px
	background url('../images/services.png') transparent 0px 2px no-repeat

.link_list,
.service_list,
.team_list,
.class_list
	td:first-child, 
	th:first-child
		padding-left 0
	
.link_list td:first-child
	width 15px
	
.link_list td:first-child a
	background url('../images/links.png') transparent 0px 4px no-repeat
	padding-left 0
	
.team_list td:first-child a
	background url('../images/team_members.png') transparent 0px 4px no-repeat
	
.class_list td:first-child a
	background url('../images/classes.png') transparent 0px 2px no-repeat

body.klassen h1 a
	padding-top 3px
	display:inline-block
	width 20px
	background url('../images/classes.png') transparent 0px 4px no-repeat
	
body.klassen h1 a:hover
	background url('../images/back_to_list.png') transparent 0px 4px no-repeat

a.more_link,
a.blackboard_more_link
	font-style oblique
	
a.more_link
	display inline-block
	line-height inherit
	min-width 27px
	height 15px
	background transparent url(../images/more_icon.png) no-repeat 3px 0px
a.more_link:hover
	background-position 3px -18px

iframe
	border 0

#ajax_loader 
	display none;
	
.service_documents a
	padding-top 2px

div.pp_default .pp_nav .currentTextHolder
	font-family Verdana
div.pp_default .pp_description
	padding-top 6px
	padding-left 130px
div.pp_default a.pp_expand
	display none !important
